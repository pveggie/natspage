<%= simple_form_for @photo do |f| %>
  <%= f.input :caption_title %>
  <%= f.input :caption_description %>
  <%= f.input :image_location, label: "Image", as: :file, :hint => image_tag(f.object.image_location.url, width: 200) %>
  <%= f.input :image_location_cache, as: :hidden %>
  <%= f.input :category_ids, collection: Category.all, prompt: "Select categories"  %>
  <%= f.button :submit %>
<% end %>
